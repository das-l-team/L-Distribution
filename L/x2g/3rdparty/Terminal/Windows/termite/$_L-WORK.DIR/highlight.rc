	CONTROL "", IDD_COLOUR11, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 111, 20, 10
	CONTROL "", IDD_COLOUR12, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 122, 20, 10
	CONTROL "", IDD_COLOUR13, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 133, 20, 10
	CONTROL "", IDD_COLOUR14, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 144, 20, 10
	CONTROL "", IDD_COLOUR15, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 155, 20, 10
END

