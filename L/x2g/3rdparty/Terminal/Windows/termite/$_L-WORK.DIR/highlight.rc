#include <windows.h>
#include "highlight.h"

FilterConfig DIALOGEX 50, 20, 222, 82
EXSTYLE WS_EX_DLGMODALFRAME | WS_EX_CLIENTEDGE
STYLE DS_MODALFRAME | DS_3DLOOK | WS_POPUP | WS_VISIBLE | WS_CAPTION
CAPTION "Highlight filter settings"
FONT 8, "MS Sans Serif"
BEGIN
	CONTROL "Match",  -1, "STATIC", SS_LEFT | WS_CHILD | WS_VISIBLE, 8, 6, 72, 8
	CONTROL "Colour", -1, "STATIC", SS_LEFT | WS_CHILD | WS_VISIBLE, 130, 6, 72, 8
	CONTROL "",       IDD_MATCH1, "EDIT", ES_LEFT | ES_AUTOHSCROLL | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 8, 16, 120, 10, WS_EX_STATICEDGE
	CONTROL "",       IDD_COLOUR1, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 130, 16, 24, 10
	CONTROL "",       IDD_MATCH2, "EDIT", ES_LEFT | ES_AUTOHSCROLL | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 8, 28, 120, 10, WS_EX_STATICEDGE
	CONTROL "",       IDD_COLOUR2, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 130, 28, 24, 10
	CONTROL "",       IDD_MATCH3, "EDIT", ES_LEFT | ES_AUTOHSCROLL | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 8, 40, 120, 10, WS_EX_STATICEDGE
	CONTROL "",       IDD_COLOUR3, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 130, 40, 24, 10
	CONTROL "",       IDD_MATCH4, "EDIT", ES_LEFT | ES_AUTOHSCROLL | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 8, 52, 120, 10, WS_EX_STATICEDGE
	CONTROL "",       IDD_COLOUR4, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 130, 52, 24, 10
	CONTROL "",       IDD_MATCH5, "EDIT", ES_LEFT | ES_AUTOHSCROLL | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 8, 64, 120, 10, WS_EX_STATICEDGE
	CONTROL "",       IDD_COLOUR5, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 130, 64, 24, 10

	CONTROL "OK",     IDOK, "BUTTON", BS_PUSHBUTTON | BS_CENTER | BS_FLAT | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 164, 6, 50, 15
	CONTROL "Cancel", IDCANCEL, "BUTTON", BS_PUSHBUTTON | BS_CENTER | BS_FLAT | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 164, 26, 50, 15
	CONTROL "Help",   IDHELP, "BUTTON", BS_PUSHBUTTON | BS_CENTER | BS_FLAT | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 164, 46, 50, 15
END

FilterInfo DIALOGEX 50, 50, 288, 190
STYLE DS_MODALFRAME | DS_3DLOOK | WS_CAPTION | WS_POPUP | WS_VISIBLE
EXSTYLE WS_EX_CLIENTEDGE | WS_EX_DLGMODALFRAME
CAPTION "Information"
FONT 8, "Tahoma"
BEGIN
    CONTROL "",       INFOTEXT, "RichEdit", ES_MULTILINE | ES_AUTOVSCROLL | ES_READONLY | WS_BORDER | WS_CHILD | WS_VISIBLE | WS_VSCROLL, 4, 4, 280, 160
    CONTROL "&Close", IDCANCEL, "BUTTON", BS_PUSHBUTTON | BS_CENTER | BS_FLAT | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 125, 170, 40, 14
END

ColourSelect DIALOGEX 50, 20, 22, 166
STYLE DS_MODALFRAME | DS_3DLOOK | WS_POPUP | WS_VISIBLE
FONT 8, "Tahoma"
BEGIN
	CONTROL "", IDD_COLOUR1, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 1, 20, 10
	CONTROL "", IDD_COLOUR2, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 12, 20, 10
	CONTROL "", IDD_COLOUR3, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 23, 20, 10
	CONTROL "", IDD_COLOUR4, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 34, 20, 10
	CONTROL "", IDD_COLOUR5, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 45, 20, 10
	CONTROL "", IDD_COLOUR6, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 56, 20, 10
	CONTROL "", IDD_COLOUR7, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 67, 20, 10
	CONTROL "", IDD_COLOUR8, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 78, 20, 10
	CONTROL "", IDD_COLOUR9, "STATIC", SS_LEFT | SS_NOTIFY | SS_SUNKEN | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 1, 89, 20, 10
